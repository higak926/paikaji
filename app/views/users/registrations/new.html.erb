<div class="row">
  <div class="user-create">
    <h2>ユーザー登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <table class="formTable">
      <tr>
        <div class="field">
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>ご希望のパスワード</th>
          <td><%= f.password_field :password, autocomplete: "new-password" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </div>
      </tr>
      <%
=begin%>
      <tr>
        <th><%= f.label :password_confirmation %></th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <%
=end%>
    </table>
    <div class="actions sign__btn">
      <%= f.submit "登録する" %>
    </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>